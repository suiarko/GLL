# =============================================================================
# ETHICAL BEAUTY AI - ENVIRONMENT CONFIGURATION
# =============================================================================

# Core AI API Keys
GEMINI_API_KEY=your_gemini_api_key_here

# Ethical Compliance APIs (Optional but recommended)
BIAS_DETECTION_API_KEY=your_bias_detection_service_key
MENTAL_HEALTH_API_KEY=your_mental_health_resources_api_key

# Analytics & Monitoring (Privacy-first)
ETHICAL_ANALYTICS_ENDPOINT=https://your-ethical-analytics.com/api
ANONYMOUS_USAGE_TRACKING=true
PERFORMANCE_MONITORING=true

# Development Settings
NODE_ENV=development
PORT=3000
VITE_APP_NAME="Ethical Beauty AI"
VITE_APP_VERSION="1.0.0"

# Security Settings
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
API_RATE_LIMIT=100
SESSION_SECRET=your_secure_session_secret_here

# Feature Flags (Ethical Features)
ENABLE_MENTAL_HEALTH_WARNINGS=true
ENABLE_BIAS_DETECTION=true
ENABLE_CULTURAL_SENSITIVITY=true
ENABLE_USAGE_LIMITS=true
ENABLE_TRANSPARENCY_REPORTS=true

# Mental Health Integration
CRISIS_TEXT_LINE_INTEGRATION=true
MENTAL_HEALTH_RESOURCES_ENABLED=true
WELLBEING_CHECK_FREQUENCY=5

# Privacy Settings
LOCAL_PROCESSING_PREFERRED=true
DATA_RETENTION_DAYS=0
USER_CONSENT_REQUIRED=true
PRIVACY_FIRST_MODE=true

# Accessibility
ENABLE_SCREEN_READER_SUPPORT=true
HIGH_CONTRAST_MODE=true
KEYBOARD_NAVIGATION=true
FOCUS_INDICATORS=true

# Ethical AI Configuration (ОНОВЛЕНО для кращого UX)
MAX_DAILY_TRANSFORMATIONS=12
COOLDOWN_PERIOD_SECONDS=30
PROGRESSIVE_LIMITS_ENABLED=true
DIVERSITY_SCORE_THRESHOLD=0.95
BIAS_DETECTION_SENSITIVITY=high

# Cultural Sensitivity
CULTURAL_EDUCATION_ENABLED=true
TRADITIONAL_STYLES_WARNING=true
CULTURAL_CONTEXT_PROVIDER=true

# Development & Testing
DEBUG_ETHICAL_SAFEGUARDS=false
MOCK_MENTAL_HEALTH_API=false
SIMULATE_BIAS_DETECTION=false
LOG_ETHICAL_VIOLATIONS=true

# Social Impact Tracking
POSITIVE_IMPACT_METRICS=true
USER_WELLBEING_SURVEYS=true
DIVERSITY_REPRESENTATION_TRACKING=true
ETHICAL_COMPLIANCE_REPORTING=true

# =============================================================================
# PRODUCTION OVERRIDES (uncomment for production deployment)
# =============================================================================

# NODE_ENV=production
# API_RATE_LIMIT=50
# DEBUG_ETHICAL_SAFEGUARDS=false
# LOCAL_PROCESSING_PREFERRED=false
# PERFORMANCE_MONITORING=true

# =============================================================================
# NOTES FOR DEVELOPERS
# =============================================================================

# 1. NEVER commit real API keys to version control
# 2. Always use HTTPS in production
# 3. Enable all ethical safeguards in production
# 4. Test mental health warnings before deploying
# 5. Validate cultural sensitivity features
# 6. Monitor bias detection accuracy
# 7. Review privacy settings regularly
# 8. Update mental health resources periodically

